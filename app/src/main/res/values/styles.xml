<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue_dark</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue_darker</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/yellow</item>

        <!-- translucent status bar (only for API 19) -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- enable activity transition -->
        <item name="android:windowContentTransitions">true</item>

        <!-- share element transition -->
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>

    </style>

    <!-- Style for the main container of an activity, handle top offset !-->
    <style name="AppTheme.MainContainer">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>
